{
    "manifest_version": 3,
    "name": "uGet Integration",
    "short_name": "uGet",
    "description": "Manifest V3 for uGet Browser Integration extension for Firefox. Replaces default download manager by uGet Download Manager.",
    "homepage_url": "http://ugetdm.com/",
    "browser_specific_settings": {
        "gecko": {
           "id": "uget-integration@slgobinath",
            "strict_min_version": "130.0"
        }
    },
    "minimum_chrome_version": "130.0",
    "background": {
        "scripts": [
            "background-MV3.js"
        ]
    },
    "icons": {
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "64": "icons/icon_64.png",
        "128": "icons/icon_128.png"
    },
    "action": {
        "default_icon": {"32": "icons/icon_32.png"},
        "default_popup": "popup.html"
    },
    "commands": {
        "toggle-interruption": {
            "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "Command+Shift+U"
            },
            "description": "Toggle interruption"
        }
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "nativeMessaging",
        "contextMenus",
        "downloads",
        "storage",
        "cookies",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_security_policy": {
        "extension_pages": "default-src 'self'"
},
    "version": "2.1.3.1"
}